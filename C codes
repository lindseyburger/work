void upperLower(char s[100]){
    for(int i = 0; i[s] != '\0'; i++){
        if(i%2 ==0){
            if ( i[s] >= 'a' && i[s] <= 'z'){
            i[s] = i[s] - 32;
            }
            printf("%c", i[s]);
        }
        else{
            i[s] = i[s];
            printf("%c", i[s]);
        }
        
    }
    
  printf("\n");
}


